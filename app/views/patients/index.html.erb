<% title "Your Patients" %>

<div class="row">
  <div class="col-lg-12">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
      <thead>
      <tr>
        <th>Patient</th>
        <th>Phone Number</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @patients.each do |patient| %>
          <tr>
            <td><%= patient.full_name %></td>
            <td><%= patient.phone_number %></td>
            <td><%= link_to 'Show', patient_path(patient) %></td>
            <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
            <td><%= link_to 'Delete', patient_path(patient), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <!-- /.table-responsive -->
    <div class="text-center">
      <%= link_to 'Add Patient', new_patient_path, class: "btn btn-primary" %>
    </div>
  </div>
  <!-- /.col-lg-12 -->
</div>
